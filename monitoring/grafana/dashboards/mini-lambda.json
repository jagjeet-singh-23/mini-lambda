{
  "title": "Mini Lambda Observability",
  "tags": ["mini-lambda", "serverless", "containers"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 0,
  "refresh": "10s",
  "uid": "mini-lambda-dashboard",
  "panels": [
    {
      "id": 1,
      "title": "Pool Size by Runtime",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "mini_lambda_pool_size",
          "legendFormat": "{{runtime}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "title": "Pool Hit Rate",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "mini_lambda_pool_hit_rate",
          "legendFormat": "{{runtime}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "title": "Warm vs Cold Starts",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "rate(mini_lambda_pool_warm_starts_total[1m])",
          "legendFormat": "{{runtime}} - Warm",
          "refId": "A"
        },
        {
          "expr": "rate(mini_lambda_pool_cold_starts_total[1m])",
          "legendFormat": "{{runtime}} - Cold",
          "refId": "B"
        }
      ]
    },
    {
      "id": 4,
      "title": "Total Executions",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 8},
      "targets": [
        {
          "expr": "sum(rate(mini_lambda_executions_total[5m]))",
          "refId": "A"
        }
      ]
    }
  ]
}
